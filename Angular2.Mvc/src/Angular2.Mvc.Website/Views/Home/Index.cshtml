@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<core-app>
    <div>
        <p><img src="~/asset/images/gif/ajax-loader.gif" /> Please wait ...</p>
    </div>
</core-app>

<span class="footer"><i class="fa fa-home"></i>@ViewBag.Title &nbsp; <i class="fa fa-copyright"></i>@ViewBag.Owner</span>



@section Scripts {
    <script>
        System.config({
            map: {
                app: 'app'
            },
            packages: {
                app: {main: 'main.js',defaultExtension: 'js'}
            },
        });
        System.import('app/main').then(null, console.error.bind(console));
    </script>
}



