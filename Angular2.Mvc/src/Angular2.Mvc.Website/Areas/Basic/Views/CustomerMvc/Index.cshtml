@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    string err = string.Empty;
    if (TempData["Error"] != null)
    {
        err = TempData["Error"].ToString();
    }

}


<customermvc-app error="@err">
    <div>
        <p><img src="~/asset/images/gif/ajax-loader.gif" /> Please wait ...</p>
    </div>
</customermvc-app>

@section Scripts {
    <script>
        System.config({
            map: {
                app: 'app/component/Basic/CustomerMvc'
            },
            packages: {
                app: { main: 'customermvc.main.js', defaultExtension: 'js' }
            }
        });
        System.import('app/customermvc.main').then(null, console.error.bind(console));
    </script>
}


