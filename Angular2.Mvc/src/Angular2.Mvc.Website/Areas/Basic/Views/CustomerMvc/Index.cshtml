@model Angular2.Mvc.Core.Models.ViewModel.VmCustomer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<customermvc-index>
    <div>
        <p><img src="~/asset/images/gif/ajax-loader.gif" /> Please wait ...</p>
    </div>
</customermvc-index>

@section Scripts {
    <script>
        System.config({
            map: {
                app: 'app/Basic/CustomerMvc/index'
            },
            packages: {
                app: { main: 'customermvc-index.main.js', defaultExtension: 'js' }
            }
        });
        System.import('app/customermvc-index.main').then(null, console.error.bind(console));
    </script>
}


